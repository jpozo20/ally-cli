{
  "name": "ally-cli",
  "version": "0.1.0",
  "description": "CLI utility to manage aliases, paths and variables based on the project/directory",
  "private": true,
  "author": {
    "name": "jpozo20",
    "url": "https://github.com/jpozo20"
  },
  "license": "MIT",
  "homepage": "https://github.com/jpozo20/ally-cli",
  "keywords": [
    "cli",
    "alias",
    "path"
  ],
  "type": "module",
  "bin": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "build:silent": "tsup --silent",
    "clean": "rimraf dist",
    "lint": "pnpm eslint --cache .",
    "typecheck": "tsc --noEmit",
    "typecheck:full": "pnpm lint && pnpm format:check && pnpm typecheck",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "start": "pnpm build:silent && DEBUG=true node dist/index.js",
    "start:ci": "pnpm typecheck:full && pnpm build",
    "start:prod": "NODE_ENV='production' pnpm build && node dist/index.js",
    "test": "vitest run --reporter=verbose"
  },
  "packageManager": "pnpm@10.11.1",
  "dependencies": {
    "@changesets/cli": "^2.29.4",
    "@commander-js/extra-typings": "^14.0.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "conf": "^13.1.0",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.0",
    "ink": "^6.0.0",
    "react": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@folder/xdg": "^4.0.1",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "atomically": "^2.0.3",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}